<p id="notice"><%= notice %></p>
<dl class="dl-horizontal">
	<dt>Name:</dt> 
	<dd><%= @user.name %> </dd>
	<dt>Email:</dt> 
	<dd><%= @user.email %></dd>
	<% if not @user.parent.nil? %>
		<dt>Referred by:</dt> 
		<dd><%= link_to @user.parent.name, @user.parent %></dd>
	<% end %>
</dl>
<%= link_to 'Back', users_path %>
